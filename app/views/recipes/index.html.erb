<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<h2>Search</h2>
<%= form_with url: search_recipes_path, method: :get do |f| %>
  <%= f.label :cuisine, "Cuisine" %>
  <%= f.text_field :cuisine %>
  <%= f.label :ingredient, "Ingredient" %>
  <%= f.text_field :ingredient %>
  <%= f.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Instructions</th>
      <th>Cooking time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.cuisine %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
